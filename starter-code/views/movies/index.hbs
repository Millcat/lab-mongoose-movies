<header>
  <h2>All the Movies</h2>
</header>

<div class="allMovies">
  <ul>
    {{#each moviesDisplay}}
    <li>
      <h3>
        <a href="/movies/{{this.id}}">{{this.title}}</a>
        <!-- linked to the page movies/:id of the movie we clicked on (page defined in the movies.js file)-->
        <form action="movies/{{this.id}}/delete" method="post">
          <button type="submit">delete</button>
        </form>
        <!-- linked to the page movies/:id/update of the movie we clicked on (page defined in the movies.js file iteration 12)-->
        <a href="/movies/{{this.id}}/update/">Edit</a>

      </h3>
    </li>
    {{/each}}

  </ul>

  <h4><a href="/movies/new">Create a new Movie</a></h4>

  <h4><a href="/">Back Home</a></h4>


</div>