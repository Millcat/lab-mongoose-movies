{{!-- update page ! --}}

<header>
    <h2>Edit a movie</h2>
</header>

<form action="/movies/{{movieUpdate._id}}/update" method="post">
    <label for="title">Title:</label>
    <input id="title" type="text" name="title" value="{{movieUpdate.title}}">

    <label for="genre">Genre:</label>
    <input id="genre" type="text" name="genre" value="{{movieUpdate.genre}}">

    <label for="plot">Plot:</label>
    <input id="plot" type="text" name="plot" value="{{movieUpdate.plot}}">

    <button type="submit">Edit</button>

</form>